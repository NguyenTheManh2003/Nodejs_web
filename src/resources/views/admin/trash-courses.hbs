                                <option value="restore">Restore</option>
                                <option value="deleteFocus">Xóa Vĩnh Viễn</option>
                            </select>

                            <button class="btn btn-primary check-all-submit btn-sm m-0 disabled">Thực hiện</button>
                        </div>
                        {{!-- --}}
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th
                                            class="col-1 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            #</th>
                                        </th>
                                        <th
                                            class="col-2 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            Course name</th>
                                        <th class="col-1 text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            Level</th>
                                        <th
                                            class="col-4 text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            Description</th>
                                        <th
                                            class="col-1text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            Slug</th>
                                        <th class=" col-2text-secondary opacity-7">Setting</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each courses}}
                                    <tr>
                                        <td class="ps-4">
                                            <input class="me-2" name="coursesId[]" type="checkbox" value="{{this._id}}"
                                                id="flexCheckDefault">
                                            {{@index}}
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="/img/{{this.image}}"
                                                        class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">{{this.name}}</h6>
                                                    <p class="text-xs text-secondary mb-0"></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">{{this.level}}{{this.deleted}}</p>
                                            <p class="text-xs text-secondary mb-0"></p>
                                        </td>
                                        <td class="align-middle text-center text-sm"
                                            style="max-width: 200px; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
                                            {{this.description}}
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-sm font-weight-bold">{{this.slug}}</span>
                                        </td>
                                        <td class="align-middle">
                                            <span data-id="{{this._id}}"
                                                class="btn_restore badge badge-sm bg-gradient-success">
                                                <a href="" class="text-back font-weight-bold text-xs"
                                                    data-toggle="tooltip" data-original-title="Edit user">
                                                    restore
                                                </a>
                                            </span>
                                            <span class="badge badge-sm bg-gradient-danger" data-bs-toggle="modal"
                                                data-bs-target="#delete_course" data-whatever="{{this._id}}">
                                                <a class="text-back font-weight-bold text-xs" data-toggle="tooltip"
                                                    data-original-title="Edit user">
                                                    Die
                                                </a></span>
                                        </td>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <th>
                                            Thùng rác trống.........................
                                            <a href="/admin/list_courses">Danh sách khóa học !</a>
                                        </th>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
