</style>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div
                        class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between">
                        <h6 class="text-white text-capitalize ps-5 fs-3">Courses list</h6>
                        <a id="trash-admin" class=" text-white text-capitalize pe-5  fs-3" href="/admin/trash">trash <i
                                class="fa-solid fa-trash"></i></a>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Course name</th>
                                    <th
                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Level</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Description</th>
                                    <th
                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Slug</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each courses}}
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/img/{{this.image}}"
                                                    class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">{{this.name}}</h6>
                                                <p class="text-xs text-secondary mb-0"></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{this.level}}</p>
                                        <p class="text-xs text-secondary mb-0"></p>
                                    </td>
                                    <td class="align-middle text-center text-sm"
                                        style="max-width: 200px; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
                                        {{this.description}}
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-sm font-weight-bold">{{this.slug}}</span>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge badge-sm bg-gradient-success"> <a
                                                href="editcourse/{{this._id}}"
                                                class="text-back font-weight-bold text-xs" data-toggle="tooltip"
                                                data-original-title="Edit user">
                                                Edit
                                            </a></span>
                                        <span class="badge badge-sm bg-gradient-danger" data-bs-toggle="modal"
                                            data-bs-target="#delete_course" data-whatever="{{this._id}}">
                                            <a class="text-back font-weight-bold text-xs" data-toggle="tooltip"
                                                data-original-title="Edit user">
                                                Delete
                                            </a></span>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <th>
                                        Bạn chưa đăng khóa học nào ------>
                                        <a href="/admin/creater">Đăng khóa học here !</a>
                                    </th>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer py-4  ">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-lg-6 mb-lg-0 mb-4">
