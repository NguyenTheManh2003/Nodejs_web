<style>
    #trash-admin:hover {
        color: rgb(26, 5, 5) !important;
    }
</style>
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div
                        class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                        <h6 class="text-white text-capitalize ps-5 fs-3">Courses list</h6>
                        <a id="trash-admin" class=" text-white text-capitalize pe-5  fs-5" href="/admin/trash">trash <i
                                class="fa-solid fa-trash"></i>({{this.deleteCount}})</a>
                    </div>
                </div>
                <form name="container-form" method="POST" action="/admin/courses/handle-form-actions">
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <div class="card-body px-0 pb-2">
                                <div class="d-flex align-items-center my-2">
                                    <div class="form-check m-0">
                                        <input class="form-check-input" type="checkbox" value="" id="checkboxAll">
                                        <label class="form-check-label m-0" for="checkboxAll">
                                            chọn tất cả
                                        </label>
                                    </div>
                                    <select name="action"
                                        class="form-control form-control-m border text-center  w-15 mx-4"
                                        aria-label="Default select example">
                                        <option value="" selected>------Chọn hành động------</option>
                                        <option value="delete">Delete</option>
                                        <option value="deleteFocus">Edit</option>
                                    </select>

                                    <button class="btn btn-primary check-all-submit btn-sm m-0 disabled">Thực
                                        hiện</button>
                                </div>
                                {{!-- --}}
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th
                                                class="col-1 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                #</th>
                                            </th>
                                            <th
                                                class="col-2 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Course name</th>
                                            <th class="col-1 text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                                Level</th>
                                            <th
                                                class="col-4 text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Description</th>
                                            <th
                                                class="col-1text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Slug</th>
                                            <th class=" col-2text-secondary opacity-7">Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each courses}}
                                        <tr>
                                            <td class="ps-4">
                                                <input class="me-2" name="coursesId[]" type="checkbox"
                                                    value="{{this._id}}" id="flexCheckDefault">
                                                {{@index}}
                                            </td>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="/img/{{this.image}}"
                                                            class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">{{this.name}}</h6>
                                                        <p class="text-xs text-secondary mb-0"></p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">{{this.level}}</p>
                                                <p class="text-xs text-secondary mb-0"></p>
                                            </td>
                                            <td class="align-middle text-center text-sm"
                                                style="max-width: 200px; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
                                                {{this.description}}
                                            </td>
                                            <td class="align-middle text-center">
                                                <span
                                                    class="text-secondary text-sm font-weight-bold">{{this.slug}}</span>
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge badge-sm bg-gradient-success"> <a
                                                        href="editcourse/{{this._id}}"
                                                        class="text-back font-weight-bold text-xs" data-toggle="tooltip"
                                                        data-original-title="Edit user">
                                                        Edit
                                                    </a></span>
                                                <span class="badge badge-sm bg-gradient-danger" data-bs-toggle="modal"
                                                    data-bs-target="#delete_course" data-whatever="{{this._id}}">
                                                    <a class="text-back font-weight-bold text-xs" data-toggle="tooltip"
                                                        data-original-title="Edit user">
                                                        Delete
                                                    </a></span>
                                            </td>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <th>
                                                Bạn chưa đăng khóa học nào ------>
                                                <a href="/admin/creater">Đăng khóa học here !</a>
                                            </th>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <footer class="footer py-4  ">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-lg-6 mb-lg-0 mb-4">
                        <div class="copyright text-center text-sm text-muted text-lg-start">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>,
                            made with <i class="fa fa-heart"></i> by
                            <a href="https://www.creative-tim.com" class="font-weight-bold" target="_blank">Creative
                                Tim</a>
                            for a better web.
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com" class="nav-link text-muted"
                                    target="_blank">Creative
                                    Tim</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/presentation" class="nav-link text-muted"
                                    target="_blank">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/blog" class="nav-link text-muted"
                                    target="_blank">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/license" class="nav-link pe-0 text-muted"
                                    target="_blank">License</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    {{!-- form delete --}}
    <form method="POST" name="delete_form"></form>

    {{!-- modal delete Courses --}}
    <!-- Modal -->
    <div class="modal fade" id="delete_course" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Do you want to delete this course?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="btn-deletecode">Delete</button>
                    <button type="button" class="btn btn-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        var exampleModal = document.getElementById('delete_course')
        var idcourses
        var deleteCourse = document.getElementById("btn-deletecode")
        // form
        var containerForm = document.forms['container-form']
        var deleteForm = document.forms['delete_form']
        //selectAll
        var checkboxAll = $('#checkboxAll')
        var coursesItemCheckbox = $('input[name="coursesId[]"]')
        var checkAllBtn = $('.check-all-submit')
        exampleModal.addEventListener('show.bs.modal', function (event) {
            // Button that triggered the modal
            var button = event.relatedTarget
            // Extract info from data-bs-* attributes
            idcourses = button.getAttribute('data-whatever')
        })

        deleteCourse.onclick = function () {
            deleteForm.action = '/admin/deletecourse/' + idcourses + '?_method=DELETE';
            deleteForm.submit();
        }  

        //
         checkboxAll.change(function () {
            var isCheckedAll = $(this).prop('checked')
            coursesItemCheckbox.prop("checked", isCheckedAll)
            renderCheckAllSubmitBtn()
        })
        // CoureseItem check
        coursesItemCheckbox.change(function () {
            isLengthItemCheck = coursesItemCheckbox.length === $('input[name="coursesId[]"]:checked').length
            checkboxAll.prop("checked", isLengthItemCheck)
            renderCheckAllSubmitBtn()
        })

        // hien lai btn disibal
        function renderCheckAllSubmitBtn() {
            var checkedCount = $('input[name="coursesId[]"]:checked').length
            if (checkedCount > 0) {
                checkAllBtn.removeClass('disabled')
            }
            else {
                checkAllBtn.addClass('disabled')
            }
        }
    </script>