<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Edit-ITEM</h6>
          </div>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <form method="POST" action="/admin/updatecourse/{{course._id}}?_method=PUT">
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Name</label>
                <input value="{{course.name}}" name="name" type="text" class="form-control border px-3"
                  id="exampleFormControlInput1" placeholder="cource name">
              </div>

              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Description</label>
                <textarea value="" name="name" type="text" class="form-control border px-3"
                  id="exampleFormControlInput1" placeholder="cource name"> {{course.description}}
                 </textarea>
              </div>


              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">image</label>
                <input value="{{course.image}}" name="image" type="text" class="form-control border px-3"
                  id="exampleFormControlInput1" placeholder="img">
              </div>

              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">level</label>
                <input value="{{course.level}}" name="level" type="text" class="form-control border px-3"
                  id="exampleFormControlInput1" placeholder="level">
              </div>

              <button type="submit" class="btn btn-primary">Cập nhật</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>