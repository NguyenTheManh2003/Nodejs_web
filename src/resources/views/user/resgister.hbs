
<div class="main">
    <form class="form" id="form-1" action method="POST">
        <h3 class="heading">Thành viên đăng ký</h3>
        <p class="desc">Cùng nhau học lập trình miễn phí tại F8 ❤️</p>

        <div class="spacer"></div>

        <div class="form-group ">
            <label class="form-label" for="fullname">Tên đầy đủ</label>
            <input class="form-control" id="fullname" name="fullname" type="text" placeholder="VD: Sơn Đặng">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" id="email" name="email" type="text" placeholder="VD: email@domain.com">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label class="form-label" for="password">Mật khẩu</label>
            <input class="form-control" id="password" name="password" type="password" placeholder="Nhập mật khẩu">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label class="form-label" for="password_confirmation">Nhập lại mật khẩu</label>
            <input class="form-control" id="password_confirmation" name="password_confirmation" type="password"
                placeholder="Nhập lại mật khẩu">
            <span class="form-message"></span>
        </div>

        <button class="form-submit">Đăng ký</button>
    </form>
</div>

<script src="./validation.js"></script>
<script>
    // có thể tái sử dụng
    Validator({
        form: '#form-1',
        errorselecter: '.form-message',
        rules: [
            Validator.isRequired('#fullname', 'Vui lòng nhập tên đầy đủ của bạn !'),
            Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
            Validator.isComfirmed('#password_confirmation', function () {
                return document.querySelector('#form-1 #password').value;
            }, `Mật khẩu nhập lại không chính xác`),
        ]
    })
</script>